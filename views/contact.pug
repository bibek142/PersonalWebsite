extends base.pug

      

block content
    nav.navbar.h-class-resp
      .left
        .left-section
          div
            img.logo(src='../static/img/mayur.png' alt='logo')
          button#playButton.logo-title Hare Krishna
        .burger
          .line
          .line
          .line
      .right
        ul.nav-list.v-class-resp
          li
            a(href='/') Home
          li
            a(href='/') About
          li
            a(href='/') Projects
          li
            a(href='/') Skills
          // <li><a href="/">Portfsolio</a></li>
          li
            a(href='/contact') Contact Me
          .darkbtn
            i.fa.fa-sun#darkButton

    section#contact.contactSection
      h1.heading
        | Contact
        span.me ME
      .cmain-box
        .c-box
          .ct-center
            | Feel free to 
            span.me contact me!
          .c-icon
            i.fas.fa-house-user
            span.c-content
              | Jaleshwor-1,Mahottari,
              | Nepal
          .c-icon
            i.fas.fa-crosshairs
            span.c-content Bangalore, India
          .c-icon.cicon-sm
            i.fa.fa-envelope(aria-hidden='true')
            span.c-content cdharybibek@gmail.com
          .c-icon.cicon-bg
            i.fa.fa-phone-square(aria-hidden='true')
            span.c-content +91 9973246878 | +977 9812077881
        .cbox
          form(action='/contact', method='post')
            .c-form
              input#name(type='text' name='name' placeholder='Enter Your Name')
              input#email(type='email' name='email' placeholder='Enter Your Email')
              input#number(type='number' name='number' placeholder='Enter Your Phone Number')
              input#address(type='address' name='address' placeholder='Enter Your Address')
              textarea#more(name='more' cols='30' rows='5' placeholder='Place Your Message')
              .f-button
                button.f-btn(type='submit') Send
    script.
      const playButton = document.getElementById('playButton');
      const audio = new Audio('../static/tone/krishna flute.mp3');

      playButton.addEventListener('click', () => {
      audio.play()
      });
    script(src='https://kit.fontawesome.com/6e1db5778e.js' crossorigin='anonymous')
